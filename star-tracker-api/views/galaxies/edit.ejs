<%- include('../partials/header') %>
<h1>Edit Galaxy</h1>
<form action="/galaxies/<%= galaxy.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
  <label for="name">Name:</label>
  <input type="text" name="name" id="name" value="<%= galaxy.name %>" required>
  <br>
  <label for="size">Size:</label>
  <input type="number" name="size" id="size" value="<%= galaxy.size %>" required>
  <br>
  <label for="description">Description:</label>
  <textarea name="description" id="description"><%= galaxy.description %></textarea>
  <br>
  <label for="image">Image:</label>
  <input type="file" name="image" id="image">
  <br>
  <button type="submit">Update</button>
</form>
<a href="/galaxies/<%= galaxy.id %>">Back to Galaxy</a>
<%- include('../partials/footer') %>
